{
  "name": "42-transcendence",
  "version": "1.0.0",
  "description": "42 Transcendence project",
  "private": true,
  "scripts": {
    "dev:backend": "cd app/core/backend && npm run dev",
    "dev:frontend": "cd app/core/frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "install:backend": "cd app/core/backend && npm install",
    "install:frontend": "cd app/core/frontend && npm install",
    "install:all": "npm install && npm run install:backend && npm run install:frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
} 