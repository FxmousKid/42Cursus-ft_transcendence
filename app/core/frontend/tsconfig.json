{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES6",
    "rootDir": "./src/ts",
    "outDir": "./dist/js",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["DOM", "ES2017"]
  },
  "include": ["src/ts/**/*"]
} 