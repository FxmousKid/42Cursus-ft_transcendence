{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "./dist/js",
    "rootDir": "./src/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2015"],
    "moduleResolution": "node"
  },
  "include": ["src/ts/**/*"]
} 