{
  "name": "ft-transcendence-frontend",
  "version": "1.0.0",
  "description": "Frontend for ft_transcendence project",
  "main": "index.js",
  "scripts": {
    "build": "tsc && tailwindcss -i ./src/css/input.css -o ./dist/css/output.css && mkdir -p ./dist/components && cp -r ./src/*.html ./dist/ && cp -r ./src/components/*.html ./dist/components/",
    "dev": "concurrently \"tsc --watch\" \"tailwindcss -i ./src/css/input.css -o ./dist/css/output.css --watch\" \"serve dist -p 5173\"",
    "serve": "fastify static -r ./dist",
    "start": "npm run build && serve dist -p 5173",
    "test": "node tests/run-tests.js",
    "test:api": "node tests/api-tests.js",
    "test:frontend": "node tests/tests.js", 
    "test:websocket": "node tests/websocket-tests.js",
    "test:performance": "node tests/perf-tests.js",
    "test:console": "node tests/console-check.js"
  },
  "dependencies": {
    "fastify-cli": "^5.7.1",
    "node-fetch": "^2.6.7",
    "puppeteer": "^24.8.2",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "playwright": "^1.52.0",
    "postcss": "^8.4.27",
    "serve": "^14.2.1",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  }
}
