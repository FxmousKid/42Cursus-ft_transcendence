{
  "name": "backend",
  "version": "0.0.1",
  "description": "Fastify backend for ft_transcendence",
  "main": "src/server.js",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "npm run compile-contracts && ts-node-dev --respawn --transpile-only src/server.ts",
    "compile-contracts": "npx hardhat compile",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migrate": "ts-node src/migrations.ts",
    "cleanup-db": "ts-node src/cleanup-backup-tables.ts",
    "fix-foreign-keys": "ts-node src/fix-foreign-keys.ts",
    "blockchain:deploy:local": "hardhat run blockchain/scripts/deploy.ts --network localhost",
    "blockchain:deploy:fuji": "hardhat run blockchain/scripts/deploy.ts --network fuji",
    "testnet:generate-key": "node generate-testnet-key.js",
    "testnet:deploy": "node deploy-testnet.js",
    "testnet:check": "node check-keys.js",
    "testnet:verify": "node verify-blockchain.js",
    "testnet:compare": "node compare-data.js"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/oauth2": "^7.4.0",
    "@fastify/session": "^10.7.0",
    "@fastify/static": "^6.10.2",
    "@fastify/swagger": "^8.8.0",
    "@fastify/swagger-ui": "^1.9.3",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "ethers": "^6.7.1",
    "fastify": "^4.22.2",
    "fastify-plugin": "^4.5.1",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@fastify/type-provider-json-schema-to-ts": "^5.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.5.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "express": "^5.1.0",
    "hardhat": "^2.19.0",
    "jest": "^29.6.4",
    "knex": "^3.1.0",
    "objection": "^3.1.5",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "webpack-cli": "^6.0.1"
  }
}
